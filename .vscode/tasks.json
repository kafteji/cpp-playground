{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Bazel Build",
            "command": "/usr/bin/bazel",
            "args": [
                "build",
                "//:playground"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}
